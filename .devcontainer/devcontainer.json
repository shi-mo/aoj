{
  "name": "shi-mo/aoj project Dev Container",
  "build": {
    "dockerfile": "../Dockerfile.dev",
    "context": ".."
  },
  "workspaceMount": "source=aoj-workspace,target=/workspace,type=volume",
  "workspaceFolder": "/workspace/aoj",
  "customizations": {
    "vscode": {
        "settings": {
            "terminal.integrated.defaultProfile.linux": "bash"
        }
    }
  },
  "postCreateCommand": "git clone https://github.com/shi-mo/aoj /workspace/aoj || true"
}
